{
  "name": "project-drift-launcher",
  "version": "1.0.0",
  "description": "Game launcher for hosting and playing custom Fortnite builds",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "fortnite",
    "launcher",
    "game",
    "era"
  ],
  "author": "Stormix",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "discord-rpc": "^4.0.1",
    "extract-zip": "^2.0.1",
    "7zip-bin": "^5.1.1"
  },
  "build": {
    "appId": "com.projectdrift.launcher",
    "productName": "Project Drift",
    "artifactName": "ProjectDriftLauncher.exe",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!dist/**/*",
      "!node_modules/**/*",
      "!*.md",
      "!package-lock.json"
    ],
    "extraFiles": [
      {
        "from": "../mcp-backend",
        "to": "mcp-backend",
        "filter": ["**/*", "!node_modules/**"]
      },
      {
        "from": "../release/bypass",
        "to": "release/bypass",
        "filter": ["**/*"]
      },
      {
        "from": "../docs",
        "to": "docs",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": null,
    "afterSign": null,
    "beforeBuild": null,
    "afterAllArtifactBuild": null
  }
}
